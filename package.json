  "bugs": {
    "url": "https://github.com/languoremgame/languorem-website/issues"
  },
  "homepage": "https://github.com/languoremgame/languorem-website#readme",
  "dependencies": {
    "less": "^3.9.0",
    "nunjucks": "^3.1.7",
    "showdown": "^1.9.0"
  }
}
